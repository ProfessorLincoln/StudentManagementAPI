@model IEnumerable<StudentManagementAPI.Models.Student>



<h2>Students List</h2>

<table class="table">

    <thead>

        <tr>

            <th>Student Name</th>

            <th>DOB</th>

            <th>Email</th>

            <th>Actions</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var student in Model)

        {

            <tr>

                <td>@student.StudentName</td>

                <td>@student.DOB.ToShortDateString()</td>

                <td>@student.Email</td>

                <td>

                    <a asp-action="Edit" asp-route-id="@student.StudentID">Edit</a> |

                    <a asp-action="Delete" asp-route-id="@student.StudentID">Delete</a>

                </td>

            </tr>

        }

    </tbody>

</table>



<a asp-action="Create">Add New Student</a> 