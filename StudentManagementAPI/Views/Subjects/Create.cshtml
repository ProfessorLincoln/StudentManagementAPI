@model StudentManagementAPI.Models.Subject

<h2>Create New Subject</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SubjectName">Subject Name</label>
        <input asp-for="SubjectName" class="form-control" placeholder="Enter subject name" required />
    </div>
    <div class="form-group">
        <label asp-for="SubjectLecturer">Subject Lecturer</label>
        <input asp-for="SubjectLecturer" class="form-control" placeholder="Enter lecturer name" required />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>
