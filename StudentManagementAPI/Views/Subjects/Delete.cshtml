@model StudentManagementAPI.Models.Subject



<h2>Delete Subject</h2>



<h3>Are you sure you want to delete this subject?</h3>



<div>

    <dl class="row">

        <dt class="col-sm-2">

            Subject Name

        </dt>

        <dd class="col-sm-10">

            @Model.SubjectName

        </dd>

        <dt class="col-sm-2">

            Lecturer

        </dt>

        <dd class="col-sm-10">

            @Model.SubjectLecturer

        </dd>

    </dl>



    <form asp-action="Delete" method="post">

        <input type="hidden" asp-for="SubjectID" />

        <button type="submit" class="btn btn-danger">Delete</button>

        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </form>

</div> 