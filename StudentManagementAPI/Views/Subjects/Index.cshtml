@model IEnumerable<StudentManagementAPI.Models.Subject>



<h2>Subjects List</h2>

<table class="table">

    <thead>

        <tr>

            <th>Subject Name</th>

            <th>Subject Lecturer</th>

            <th>Actions</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var subject in Model)

        {

            <tr>

                <td>@subject.SubjectName</td>

                <td>@subject.SubjectLecturer</td>

                <td>

                    <a asp-action="Edit" asp-route-id="@subject.SubjectID">Edit</a> |

                    <a asp-action="Delete" asp-route-id="@subject.SubjectID">Delete</a>

                </td>

            </tr>

        }

    </tbody>

</table>



<a asp-action="Create">Add New Subject</a> 